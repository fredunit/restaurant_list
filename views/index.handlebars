<div class="container mt-5">

  <!-- search bar -->
  <div class="row" id="search-bar">
    <div class="col-12">
      <form action="/search">
        <div class="input-group mb-3">
          <input type="text" name="keyword" class="form-control" placeholder="Enter restaurant name to search..."
            aria-label="Restaurant Name..." aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit" id="search-button">Search</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <!--restaurant list-->
  <div class="row row-cols-3 g-4 p-4" id="data-panel">
    {{#each restaurant}}
    <div class="card-group">
      <div class="col mb-3">
        <div class="card h-100" style="width: 18rem;">
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <ul class="list-group list-group-flush text-center">
              <li class="list-group-item">{{this.name}}</li>
            </ul>
            <img src="{{this.image}}" class="card-img-top thumbnails" alt="Card image cap">
          </a>
          <div class="card-footer">
            <form action="/{{ this._id }}/edit" method="GET">
              <button type="submit" class="edit-btn">編輯</button>
            </form>
            <form action="/{{ this._id }}/delete" method="POST">
              <button type="submit" class="delete-btn" id="delete-btn">刪除</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    {{/each}}

  </div>